{
  "name": "@loanlink/cxsd",
  "version": "1.0.0",
  "description": "Streaming XSD parser and XML parser generator with TypeScript output",
  "author": "Loanlink",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Capital-Management-Group/cxsd"
  },
  "bugs": {
    "url": "https://github.com/Capital-Management-Group/cxsd/issues"
  },
  "homepage": "https://github.com/Capital-Management-Group/cxsd#readme",
  "main": "./dist/schema.js",
  "typings": "./dist/schema.d.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "release": "np",
    "lint": "eslint --ext .ts,.js --ignore-path .gitignore --fix src",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "postpublish": "TAG=\"v$(jq -r .version package.json)\" && git commit -am \"Bumped to version $TAG\" && git tag -a $TAG -m \"Published version $TAG\" && git push origin $TAG",
    "test": "jest"
  },
  "bin": {
    "cxsd": "bin/cxsd.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "xsd",
    "dts",
    "xml",
    "schema",
    "parser",
    "typescript"
  ],
  "dependencies": {
    "@loanlink/cget": "Capital-Management-Group/cget",
    "@loanlink/cxml": "Capital-Management-Group/cxml",
    "commander": "^9.5.0",
    "node-expat": "^2.4.0",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.11",
    "@types/node-expat": "^2.3.2",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "mkdirp": "^3.0.1",
    "npm-run-all2": "^6.0.5",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules)/",
      "<rootDir>/(dist)/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/(node_modules)/",
      "<rootDir>/(dist)/"
    ],
    "testRegex": "(/(src|test)/.*\\.test\\.(ts|js))$"
  }
}
