{
  "name": "@loanlink/cxsd",
  "version": "0.2.10",
  "description": "Streaming XSD parser and XML parser generator with TypeScript output",
  "main": "./dist/schema.js",
  "typings": "./dist/schema.d.ts",
  "bin": {
    "cxsd": "bin/cxsd"
  },
  "files": [
    "dist",
    "bin",
    "package.json",
    "package-lock.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "postpublish": "TAG=\"v$(jq -r .version package.json)\" && git commit -am \"Bumped to version $TAG\" && git tag -a $TAG -m \"Published version $TAG\" && git push origin $TAG",
    "test": "npm-run-all test:*",
    "test:build": "npm-run-all build test:build:*",
    "test:build:clean": "mkdirp cache && rimraf cache && cd test && mkdirp cache && rimraf cache && mkdirp xmlns && rimraf xmlns && mkdirp output && rimraf output && cd ..",
    "test:build:compile": "npm-run-all test:build:compile:*",
    "test:build:compile:dir-example": "cd test && node ../bin/cxsd ./input/dir-example.xsd -o ./output/dir-example && cd ..",
    "test:build:compile:datacatalogus": "cd test && node ../bin/cxsd ./input/datacatalogus.xsd -o ./output/datacatalogus -n datacatalogus && cd ..",
    "tests:run": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules)/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/(node_modules)/"
    ],
    "testRegex": "(/src/.*\\.test\\.(ts|js))$"
  },
  "author": "Juha JÃ¤rvi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Capital-Management-Group/cxsd"
  },
  "bugs": {
    "url": "https://github.com/Capital-Management-Group/cxsd/issues"
  },
  "homepage": "https://github.com/Capital-Management-Group/cxsd#readme",
  "keywords": [
    "xsd",
    "dts",
    "xml",
    "schema",
    "parser",
    "typescript"
  ],
  "dependencies": {
    "@wikipathways/cget": "^0.1.7",
    "@wikipathways/cxml": "0.2.14",
    "commander": "^9.5.0",
    "node-expat": "^2.3.18",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/node": "^10.17.0",
    "@types/source-map-support": "^0.5.6",
    "jest": "^29.5.0",
    "mkdirp": "^2.1.6",
    "npm-run-all2": "^6.0.4",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  }
}
