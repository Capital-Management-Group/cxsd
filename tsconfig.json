{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "removeComments": false,
    "lib": [
      "esnext"
    ],
    "target": "es6"
  },
  "files": [
    "src/cli.ts"
  ],
  "include": [
    "test/**/*.test.ts"
  ]
}
