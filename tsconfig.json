{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "removeComments": false,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "target": "es6"
  },
  "files": ["src/cli.ts"],
  "include": ["test/**/*.test.ts"],
  "exclude": ["node_modules", "packages", "./dist/**"]
}
